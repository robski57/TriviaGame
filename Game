# Guess game by Robski57

print("Hello, Welcome to the Trivia game")

ans = input("Are you ready to play (yes/no): ")
score = 0
total_q = 4

if ans.lower() == "yes":
    ans = input("1. What is the name of the main hero in star wars? ")
    if ans.lower() == "luke skywalker":
        score += 1
        print("correct")
    else:
        print("Incorrect")

    ans = input("2. What is the name of Minnesota's pro football team? ")
    if ans.lower() == "vikings":
        score += 1
        print("correct")
    else:
        print("Incorrect")

    ans = input("3. Who was the host of the double dare? ")
    if ans.lower() == "mark summers":
        score += 1
        print("correct")
    else:
        print("Incorrect")

    ans = input("What is the name of your fairy princess? ")
    if ans.lower() == "tara carter":
        score += 1
        print("correct")
    else:
        print("Incorrect")

print("Thank you for playing", score, "questions coorect.")
mark = (score/total_q) * 100

print("Mark:", str(mark) + '%')
print("Goodbye")
